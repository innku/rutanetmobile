<div class="toolbar">
	<h1 id="pageTitle">
		Edit <%=@freight.origin%>
	</h1>
</div>

<form title="Edit Freight" 
	  class="panel" 
	  id="freight_edit_form" 
	  method="POST" 
	  action="<%=url_for(:action => :update)%>" selected="true">
	<fieldset>
		<input type="hidden" name="id" value="<%=@freight.object%>"/>
		
		  <div class="row">
			  <label>Origin: </label>
			  <input type="text" name="freight[origin]" value="<%=@freight.origin%>"/>
		  </div>
		
		  <div class="row">
			  <label>Destination: </label>
			  <input type="text" name="freight[destination]" value="<%=@freight.destination%>"/>
		  </div>
		
		  <div class="row">
			  <label>Category: </label>
			  <input type="text" name="freight[category]" value="<%=@freight.category%>"/>
		  </div>
		
		  <div class="row">
			  <label>Weight: </label>
			  <input type="text" name="freight[weight]" value="<%=@freight.weight%>"/>
		  </div>
		
	</fieldset>
	<input type="submit" value="Update"/>
	<p align="center">
		<a href="<%=url_for(:action => :delete, :id => @freight.object)%>">
			<font color="#990000">Delete</font>
		</a>
	</p>
</form>