<div class="toolbar">
	<h1 id="pageTitle">
		New Freight
	</h1>
</div>

<form title="New Freight" 
	  class="panel"
	  id="freight_new_form" 
	  method="POST" 
	  action="<%=url_for(:action => :create)%>" selected="true">
	<fieldset>
		<input type="hidden" name="id" value="<%=@freight.object%>"/>
		
		  <div class="row">
			  <label>Origin: </label>
			  <input type="text" name="freight[origin]"/>
		  </div>
		
		  <div class="row">
			  <label>Destination: </label>
			  <input type="text" name="freight[destination]"/>
		  </div>
		
		  <div class="row">
			  <label>Category: </label>
			  <input type="text" name="freight[category]"/>
		  </div>
		
		  <div class="row">
			  <label>Weight: </label>
			  <input type="text" name="freight[weight]"/>
		  </div>
		
	</fieldset>
	<input type="submit" value="Create"/>
</form>